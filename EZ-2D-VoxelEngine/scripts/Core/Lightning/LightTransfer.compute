#pragma kernel CSLight

RWTexture2D<float4> Result;
StructuredBuffer<float4> LightData; 

int width;
int height;

[numthreads(8, 8, 1)]
void CSLight(uint3 id : SV_DispatchThreadID)
{
    uint x = id.x;
    uint y = id.y;

    if (x >= width || y >= height)
        return;

    uint index = y * width + x;
 
    Result[int2(x, y)] = LightData[index];
}
